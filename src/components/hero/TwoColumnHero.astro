---
import { Image } from "astro:assets";
const { image } = Astro.props;
---

<div class="py-24 sm:py-32 relative bg-gradient-to-b from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800">
  <div
    class="mx-auto px-6 sm:px-12 lg:px-16 max-w-7xl gap-16 sm:gap-y-24 grid lg:grid-cols-2 lg:items-center"
  >
    <!-- Contenedor de texto -->
    <div>
      <h1 class="text-4xl sm:text-5xl font-extrabold tracking-tight text-gray-800 dark:text-gray-100 dashedcue">
        <slot name="heading" />
      </h1>
      <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-300">
        <slot name="description" />
      </p>
    </div>
    
    <!-- Imagen -->
    <div class="relative">
      <div class="absolute inset-0 rounded-md bg-gradient-to-tr from-primary-100 via-primary-200 to-primary-300 dark:from-primary-900 dark:via-primary-800 dark:to-primary-700 blur-xl"></div>
      <img
        class="relative w-full rounded-lg shadow-2xl ring-1 ring-gray-300 dark:ring-gray-700"
        src={image}
        alt="Descripción de la imagen"
      />
    </div>
  </div>
</div>

<style>
  /* Estilo de texto destacado */
  .highlight span {
    @apply bg-gray-800 text-white px-1 -rotate-6;
  }

  /* Título con subrayado en líneas discontinuas */
  .dashedcue span {
    @apply underline underline-offset-4 decoration-primary-600 decoration-dashed;
  }
</style>
